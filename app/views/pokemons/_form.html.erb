<%= simple_form_for @pokemon do |f| %>
<div class="row">
	<div class="form-group col-lg-5">
		<p>
			<%= f.input :name, label: 'Nom', class: 'form-control' %>
		</p>
	</div>
</div>
<div class="row">
	<div class="form-group col-lg-5">
		<p>
			<%= f.input :number, label: 'Numéro', class: 'form-control' %>
		</p>
	</div>
</div>
<div class="row">
	<div class="form-group col-lg-5">
		<p>
			<%= f.input :level, label: 'niveau', class: 'form-control' %>
		</p>
	</div>
</div>
<div class="row">
	<div class="form-group col-lg-5">
		<p>
			<%= f.input :health_points, label: 'Point de vie', class: 'form-control' %>
		</p>
	</div>
</div>
<div class="row">
	<div class="form-group col-lg-5">
		<p>
			<%= f.association :type, label: 'Type', class: 'form-control' %>
		</p>
	</div>
</div>
<div class="row">
	<div class="form-group col-lg-5">
		<p>
			<%= f.association :moves, label: 'Attaques', as: :check_boxes, class: 'form-control' %>
		</p>
	</div>
</div>
<p>
	<%= f.submit submit , class: 'btn btn-primary' %> <!-- Préférer l'internationalisation pour le nom du bouton -->
</p>
<% end %>