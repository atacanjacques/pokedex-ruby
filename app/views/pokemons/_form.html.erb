<%= form_for @pokemon do |f| %>
<div class="row">
	<div class="form-group col-lg-5">
		<p>
			<%= f.label :name %>
			<%= f.text_field :name, class: 'form-control' %>
		</p>
	</div>
</div>
<p>
	<%= f.submit submit , class: 'btn btn-primary' %> <!-- Préférer l'internationalisation pour le nom du bouton -->
</p>
<% end %>