<h1>Types</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Color</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @types.each do |type| %>
      <tr>
        <td><%= type.name %></td>
        <td><%= type.color %></td>
        <td><%= link_to 'Afficher', type, class: 'btn btn-primary' %></td>
        <td><%= link_to 'Modifier', edit_type_path(type), class: 'btn btn-warning' %></td>
        <td><%= link_to 'Supprimer', type, method: :delete, data: { confirm: 'Êtes-vous sûr ?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Ajouter un Type', new_type_path, class: 'btn btn-success' %>
