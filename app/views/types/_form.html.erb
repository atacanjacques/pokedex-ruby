<%= form_for @type do |f| %>
<div class="row">
  <div class="form-group col-lg-5">
    <p>
      <%= f.label :name, 'Nom' %>
      <%= f.text_field :name, class: 'form-control' %>
    </p>
  </div>
</div>
<div class="row">
  <div class="form-group col-lg-5">
    <p>
      <%= f.label :color, 'Couleur' %>
      <%= f.text_field :color, class: 'form-control' %>
    </p>
  </div>
</div>
<p>
  <%= f.submit submit , class: 'btn btn-primary' %>
</p>
<% end %>